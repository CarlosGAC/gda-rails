<h2 class="h2-sign">Servicios</h2>
<div class="services-contenedor">

  <%= search_form_for @q do |f| %>

  <%= f.search_field :client_cont, placeholder: 'Nombre del cliente' %>
  <%= f.search_field :ubication_cont, placeholder: 'Ubicación' %>
  <%= f.search_field :destiny_cont, placeholder: 'Destino' %>
  <%= f.search_field :inventary_num_cont, placeholder: 'Número de inventario' %>
  <%= f.search_field :keys_num_cont, placeholder: 'Número de llaves' %>
  <%= f.search_field :brand_cont, placeholder: 'Marca' %>
  <%= f.search_field :car_type_cont, placeholder: 'Tipo' %>
  <%= f.search_field :color_cont, placeholder: 'Color' %>
  <%= f.search_field :licence_plates_cont, placeholder: 'Placas' %>
  <%= f.search_field :model_cont, placeholder: 'Modelo' %>
  <%= f.search_field :operator_name_cont, placeholder: 'Operador' %>
  <%= f.search_field :truck_number_cont, placeholder: 'Grua' %>

  <%= f.date_field :date_gteq, placeholder: 'Fecha inicial', :id => 'df_start' %>
  Hasta
  <%= f.date_field :date_lteq, placeholder: 'Fecha final', :id => 'df_end' %>

  <%= f.submit "Buscar"%>
  <%end%>

  <tr>
    <th><%= sort_link @q, :date, "Fecha" %></th>
  </tr>
  <% if @service.any? %>
  <div class="resultado-assistances">
    <% @service.each do |s| %>
    <div class="S_A">
      <div class="campo_data"><span>Fecha: </span></div>
      <div class="campo_data2"><%= s.date %></div>
      <div class="campo_data"><span>Hora: </span></div>
      <div class="campo_data2"><%= s.hour.strftime('%I:%M:%S %p') %></div>
      <div class="campo_data"><span>Cliente: </span></div>
      <div class="campo_data2"><%= s.client %></div>
      <div class="campo_data"><span>Operador: </span></div>
      <div class="campo_data2"><%= s.operator.name %></div>
      <div class="campo_data"><span>Ubicacion: </span></div>
      <div class="campo_data2"><%= s.ubication %></div>
      <div class="campo_data"><span>Destino: </span></div>
      <div class="campo_data2"><%= s.destiny %></div>

      <div class="detail">
        <%= link_to 'Mostrar detalle', s, method: :get %>
        <%= link_to 'Generar PDF', service_path(s, :format => 'pdf'), target: "_blank" %>
      </div>

    </div>
    <% end %>
  <% else %>
    <%#Make me look fancy?%>
    <p>No hay servicios registrados el día de hoy.</p>
    <% end %>
  </div>
  <%= link_to 'Nuevo servicio', new_service_path %>
</div>
