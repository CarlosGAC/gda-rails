.alert
  width: 100%;
  height: 2em;
  margin-top: 2em;
  font-size: 2em;
  display: flex;
  align-items: center;
  justify-content: center;

.alert-notice
  background-color: $green_success
  border: 1px solid darken($green_success, 10)
  border-radius: 10px;
  color: $white_text;

.alert-error
  background-color: $red_chido
  border: 1px solid darken($red_chido, 10)
  border-radius: 10px;
  color: $white_text;

.alert-edit
  background-color: $blue_edit;
  border: 1px solid darken($blue_edit, 10)
  border-radius: 10px;
  color: $white_text;
