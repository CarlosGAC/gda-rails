@import 'normalize.styl'
@import 'forms.styl'
@import '../layout/layout.styl'
@import '../theme/color.styl'

body
  background-color $white_base;
  font-family 'Open Sans', sans-serif;
  height 100%;
  min-width 600px;

h1
  font-size 3em;

h2
  font-size 2.5em;

h3
  font-size 1em;

p
  font-size 2em;

#logo
  display inline-block;
  height 150px;
  padding-top 1em;
  width 150px;

#title
  display inline-block;
  margin-left 15%;
  margin-right auto;
  width 30%
  // padding-top 1.3em;

.contenedor
  margin 100px 10% auto 10%;
  width 80%;

// Para que los botones de la pagina del index tengan el mismo tamaño
.index_button
  width 150px;

.index_logo
  background-color $blue_logo;
  margin auto;
  padding 0 0;
  &:hover
    background-color $blue_logo;

.white
  color $white_base;

