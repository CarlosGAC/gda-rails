@import 'normalize.styl'
@import 'forms.styl'
@import '../layout/layout.styl'
@import '../theme/color.styl'

body
  background-color $white_base;
  font-family 'Open Sans', sans-serif;
  height 100%;
  min-width 600px;

h1
  font-size 3em;

h2
  font-size 2.5em;

h3
  font-size 1em;

p
  font-size 2em;

select
  min-width 50px;

textarea
  min-width 250px;
  max-width 750px;

#logo
  display inline-block;
  height 150px;
  padding-top 1em;
  width 150px;

#title
  display inline-block;
  margin-left 15%;
  margin-right auto;
  width 30%

.contenedor
  height: 100vh;
  margin 100px 10% auto 10%;
  width 80%;

.welcome-contenedor
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;


.operators-contenedor
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  flex-direction: column;

.new_operator
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  flex-direction: column;

.trucks-contenedor
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
  flex-direction: column;

.new_truck
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  flex-direction: column;

.services-contenedor
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
  flex-direction: column;

.resultado-services
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;

// .new_service
//   display: flex;
//   flex-wrap: wrap;
//   align-items: center;
//   flex-direction: column;

.assistances-contenedor
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
  flex-direction: column;

.resultado-assistances
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;

