@import 'normalize.styl'
@import 'forms.styl'
@import '../layout/layout.styl'
@import '../theme/color.styl'

body
  background-color $white_base;
  font-family 'Open Sans', sans-serif;
  height 100%;
  min-width 600px;

.white
  color $white_base;

h1
  font-size 3em;

h2
  font-size 2.5em;

h3
  font-size 1em;

p
  font-size 2em;
  
a
  background-color $blue_button;
  border-radius 10px;
  color #fff;
  display inline-block;
  font-size 2.3em;
  margin 25px;
  // margin-top 50px;
  min-width 250px;
  padding 14px 25px;
  text-decoration none;
  
  
a:hover
  background-color $blue_button_hover;

#logo
  width 150px;
  height 150px;
  display inline-block;
  padding-top 1em;

#title
  display inline-block;
  width 30%
  margin-left 15%;
  margin-right auto;
  // padding-top 1.3em;

.contenedor
  width 80%;
  margin 100px 10% auto 10%;
  




